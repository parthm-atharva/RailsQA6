<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.title, question_path(question) %></td>
        <% if question.user_id == current_user.id %>
          <td><%= link_to 'Show', question %></td>
          <td><%= link_to 'Edit', edit_question_path(question) %></td>
          <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Follow user', follow_user_path(question.user_id), class: 'follow_user', method: :post %></td>
          <td><%= link_to 'Follow topic', follow_topic_path(question.user_id), class: 'follow_topic', method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

